<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" >
        
		<TextView
		    android:id="@+id/char_to_draw"
		    android:layout_width="180dp"
		    android:layout_height="fill_parent"
		    android:layout_above="@+id/drawing_view_quiz"
		    android:layout_alignLeft="@+id/clear_button"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="60dp"
		    android:textSize="40sp"
		    android:gravity="center"/>

		<com.wb.test.ResultsDrawingView
		    android:id="@+id/drawing_view_quiz"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_below="@+id/previous_button" />

		<Button
		    android:id="@+id/next_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:onClick="next"
		    android:text="@string/button_next" />

		<Button
		    android:id="@+id/previous_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:onClick="previous"
		    android:text="@string/button_previous" />

	</RelativeLayout>