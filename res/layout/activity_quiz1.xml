<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" >

		<TextView
		    android:id="@+id/char_to_draw"
		    android:layout_width="180dp"
		    android:layout_height="fill_parent"
		    android:layout_above="@+id/drawing_view_quiz"
		    android:layout_alignLeft="@+id/clear_button"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="60dp"
		    android:textSize="40sp"
		    android:gravity="center"/>

		<com.wb.test.QuizDrawingView
		    android:id="@+id/drawing_view_quiz"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_below="@+id/clear_button"
		    android:layout_marginTop="30dp" />

		<Button
		    android:id="@+id/give_up_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:onClick="giveUp"
		    android:text="@string/button_give_up" />

		<Button
		    android:id="@+id/clear_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:onClick="clear"
		    android:text="@string/button_clear" />

	</RelativeLayout>