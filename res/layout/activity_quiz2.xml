<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView
    android:id="@+id/question_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="10dp"
    android:textSize="10sp" />

<ImageView
    android:id="@+id/question"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:contentDescription="@string/question" />

<Button
    android:id="@+id/option2"
    android:layout_width="115dp"
    android:layout_height="115dp"
    android:layout_alignLeft="@+id/option4"
    android:layout_below="@+id/option4"
    android:layout_marginTop="22dp" />

<Button
    android:id="@+id/option4"
    android:layout_width="115dp"
    android:layout_height="115dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="24dp" />

<Button
    android:id="@+id/option1"
    android:layout_width="115dp"
    android:layout_height="115dp"
    android:layout_alignBaseline="@+id/option2"
    android:layout_alignBottom="@+id/option2"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="24dp" />

<Button
    android:id="@+id/option3"
    android:layout_width="115dp"
    android:layout_height="115dp"
    android:layout_above="@+id/option2"
    android:layout_alignLeft="@+id/option1" />

</RelativeLayout>